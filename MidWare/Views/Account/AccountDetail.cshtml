@model AccountModel
@{
    ViewData["Title"] = "Account Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12" style="background:#fff; border-radius: 0 0 10px 10px;">
        <h3 class="ptitle">Account Detail</h3>
        <div class="form-group">
            <label class="col-sm-2 control-label">Name:</label>
            <div class="col-sm-10">
                <p class="form-control-static"> @Model.Name</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Email:</label>
            <div class="col-sm-10">
                <p class="form-control-static"> @Model.Email</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">ContactNumber:</label>
            <div class="col-sm-10">
                <p class="form-control-static"> @Model.ContactNumber</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Type:</label>
            <div class="col-sm-10">
                <p class="form-control-static">
                    @if (@Model.Type == 1)
                    {
                    <span>Carrier</span>
                    }
                    else if (@Model.Type == 2)
                    {
                    <span>Mitigation</span>

                    }
                    else if (@Model.Type == 3)
                    {

                    <span>Litigation</span>
                    }
                    else if (@Model.Type == 4)
                    {

                    <span>Adjuster</span>
                    }
                    else if (@Model.Type == 5)
                    {
                    <span>Restoration</span>

                    }
                </p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Rating:</label>
            <div class="col-sm-10">
                <p class="form-control-static"> @Model.Rating</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">IsVerified:</label>
            <div class="col-sm-10">
                <p class="form-control-static"> @Model.IsVerified</p>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Number Of Project Done:</label>
            <div class="col-sm-10">
                <p class="form-control-static"> @Model.NumberOfProjectDone</p>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Member Since:</label>
            <div class="col-sm-10">
                <p class="form-control-static"> @Model.MemberSince</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Badge:</label>
            <div class="col-sm-10">
                <p class="form-control-static">  @Model.Badge</p>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model.AccountFeedBack)
            {
                <div>@item.Name</div>
                <div>@item.CreatedAt</div>
                <div>@item.Comment</div>
                <div>@item.Ratings</div>
            }
        </div>
    </div>
</div>
