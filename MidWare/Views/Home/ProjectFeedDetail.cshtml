@model ProjectFeedDetailModel
@{
    ViewData["Title"] = "ProjectFeedDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12" style="background:#fff; border-radius: 0 0 10px 10px;">
        <h3 class="ptitle">Job Detail</h3>
        <div class="boxproject1" style="padding-bottom: 0;">
            <h3 class="titleproject" href="/Home/ProjectFeedDeatil/@Model.ProjectFeed.Id">@Model.ProjectFeed.Title</h3>
            <p class="description">
                @Model.ProjectFeed.Details</br>
                <b>Posted By: </b>@Model.ProjectFeed.Name <b>on</b> @Model.ProjectFeed.CreatedDate
            </p>

            <div class="boxproject skill">
                <span><b>SkillLevel</b>@Model.ProjectFeed.SkillLevel</span>
                <span><b>Rating</b><i class="glyphicon glyphicon-star"></i> @Model.ProjectFeed.Account.Rating</span>
                <span class="txtgreen"><b>Payment Verified</b><i class="glyphicon glyphicon-usd"></i></span>
                <span class="txtgreen"><b>Account Verified</b><i class="glyphicon glyphicon-ok"></i></span>
                </div>
            </div>


            <h3 class="ptitle">Proposals</h3>
            <div class="boxproject1" style="padding-bottom:0;">


                @foreach (var bid in Model.ProjectFeed.Bids)
                {
                    <p class="description">
                        <i>@bid.Comment</i><br />
                        
                        <span>Submitted on @bid.BidDate</span>
                    </p>
                    <div class="boxproject skill">
                        <a class="btnview pull-right" href="/Account/Detail/@bid.BidBy/">View Account</a>
                        <span><b>Submitted By</b><i class="glyphicon glyphicon-user"></i> @bid.BidByName</span>
                        <span><b>Estimated Time</b><i class="glyphicon glyphicon-time"></i> @bid.Duration Day</span>
                        <span><b>Value</b><i class="glyphicon glyphicon-usd"></i> @bid.BidValue</span>

                    </div>


                        @if (string.IsNullOrEmpty(Model.ProjectFeed.AssignTo))
                        {
                            <a class="btnview pull-right" href="/Carrier/Assign/@Model.ProjectFeed.Id/@bid.BidBy/">Award Project</a>
                        }

                        }


                    </div>

                </div>
</div>

