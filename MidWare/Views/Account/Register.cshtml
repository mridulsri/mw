@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div class="container" style="background:#fff; border-radius:20px; margin-top:20px">
    <div class="row">
        <div class="col-sm-7 signupimg">
            <img src="~/images/signup.PNG" class="img-responsive" />


            <img src="~/images/midware.png" style="height:80px; margin-left: 30px;" />
            <p>Collaborates Insurance Actors. Get your job done in a hassle free way.</p>
        </div>

        <div class="col-sm-5">

            @*<h3>Already have an account? <a asp-action="Signin">LOGIN</a></h3>*@
            <div class="account-login-container">
                <div class="row">
                    <div class="col-sm-12">
                        <h3>
                            <span>Sign UP</span> Let's Get Started
                        </h3>
                        <section style="padding: 0 25px;">
                            <form asp-controller="Account" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="row">
                                    <div class="form-group">
                                        @foreach (var item in Model.AccountTypes)
                                        {
                                           if (item.Id == 1)
                                            {
                                                <div class="col-md-2 box">
                                                    <label title="Carrier">
                                                        <img src="~/images/Carrier.jpg" alt="Carrier" class="img-thumbnail img-check" />
                                                        <input type="radio" asp-for="Type" value="@item.Id" class="hidden" autocomplete="off">
                                                    </label>
                                                </div>
                                            }
                                            else if (item.Id == 2)
                                            {
                                                <div class="col-md-2 box">
                                                    <label title="Mitigation">
                                                        <img src="~/images/Mitigation.jpg" alt="Mitigation" class="img-thumbnail img-check" />
                                                        <input type="radio" asp-for="Type" value="@item.Id" class="hidden" autocomplete="off">
                                                    </label>
                                                </div>

                                            }
                                            else if (item.Id == 3)
                                            {

                                                <div class="col-md-2 box">
                                                    <label title="Litigation">
                                                        <img src="~/images/Litigation.jpg" alt="Litigation" class="img-thumbnail img-check" />
                                                        <input type="radio" asp-for="Type" value="@item.Id" class="hidden" autocomplete="off">
                                                    </label>
                                                </div>
                                            }
                                            else if (item.Id == 4)
                                            {

                                                <div class="col-md-2 box">
                                                    <label title="Adjuster">
                                                        <img src="~/images/Adjuster.jpg" alt="Adjuster" class="img-thumbnail img-check" />
                                                        <input type="radio" asp-for="Type" value="@item.Id" class="hidden" autocomplete="off">
                                                    </label>
                                                </div>
                                            }
                                            else if (item.Id == 5)
                                            {
                                                <div class="col-md-2 box">
                                                    <label title="Restoration">
                                                        <img src="~/images/Restoration.jpg" alt="Restoration" class="img-thumbnail img-check" />
                                                        <input type="radio" asp-for="Type" value="@item.Id" class="hidden" autocomplete="off">
                                                    </label>
                                                </div>

                                            }

                                        }
                                    </div>
                                </div>


                                @*<div class="form-group">
                                        <label asp-for="Type" class="control-label"></label>

                                            <input asp-for="Type" class="form-control" />
                                            <span asp-validation-for="Type" class="text-danger"></span>

                                    </div>*@
                                <div class="form-group">
                                    <label asp-for="Name" class="control-label"></label>

                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>

                                </div>
                                <div class="row">
                                    <div class="form-group col-sm-6">
                                        <label asp-for="ContactNumber" class="control-label"></label>

                                        <input asp-for="ContactNumber" class="form-control" />
                                        <span asp-validation-for="ContactNumber" class="text-danger"></span>

                                    </div>
                                    <div class="form-group col-sm-6">
                                        <label class="control-label">Account Type</label>

                                        <select class="form-control" >
                                            <option>Select</option>
                                            <option>Individual</option>
                                            <option>Company</option>
                                            </select>
                                        <span  class="text-danger"></span>

                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Email" class="control-label"></label>

                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>

                                </div>
                                <div class="row">
                                    <div class="form-group col-sm-6">
                                        <label asp-for="Password" class="control-label"></label>

                                        <input asp-for="Password" class="form-control" />
                                        <span asp-validation-for="Password" class="text-danger"></span>

                                    </div>
                                    <div class="form-group  col-sm-6">
                                        <label asp-for="ConfirmPassword" class="control-label"></label>

                                        <input asp-for="ConfirmPassword" class="form-control" />
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                                    </div>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-block btn-primary">REGISTER</button>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6 textinfo">
                                        Already Have  an account?
                                    </div>
                                    <div class="col-sm-6 text-right">
                                        <a asp-action="signin" class="btn btn-link">Sign In</a>.
                                    </div>
                                </div>

                            </form>
                        </section>
                    </div>
                </div>
            </div>

            @section Scripts {
                @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
            }
        </div>

    </div>
</div>